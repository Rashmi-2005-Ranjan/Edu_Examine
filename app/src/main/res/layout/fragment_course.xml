<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Header Title -->
    <TextView
        android:id="@+id/learning_resources_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Learning Resources"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <!-- Container for Resource Cards -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Sample Resource Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:layout_marginBottom="12dp"
                android:elevation="4dp">

                <!-- Icon or Thumbnail -->
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:contentDescription="Resource Thumbnail"
                    android:layout_gravity="center_vertical"
                    android:padding="8dp" />

                <!-- Resource Details -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="12dp">

                    <!-- Resource Title -->
                    <TextView
                        android:id="@+id/resource_title_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Course Resource 1"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <!-- Resource Description -->
                    <TextView
                        android:id="@+id/resource_description_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="A brief description of Course Resource 1."
                        android:textSize="14sp"
                        android:layout_marginTop="4dp" />

                </LinearLayout>

                <!-- Download Button -->


            </LinearLayout>

            <!-- Another Resource Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:layout_marginBottom="12dp"
                android:elevation="4dp">

                <!-- Icon or Thumbnail -->
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:contentDescription="Resource Thumbnail"
                    android:layout_gravity="center_vertical"
                    android:padding="8dp" />

                <!-- Resource Details -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="12dp">

                    <!-- Resource Title -->
                    <TextView
                        android:id="@+id/resource_title_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Course Resource 2"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <!-- Resource Description -->
                    <TextView
                        android:id="@+id/resource_description_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="A brief description of Course Resource 2."
                        android:textSize="14sp"
                        android:layout_marginTop="4dp" />

                </LinearLayout>

                <!-- Download Button -->


            </LinearLayout>

            <!-- Another Resource Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:layout_marginBottom="12dp"
                android:elevation="4dp">

                <!-- Icon or Thumbnail -->
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:contentDescription="Resource Thumbnail"
                    android:layout_gravity="center_vertical"
                    android:padding="8dp" />

                <!-- Resource Details -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="12dp">

                    <!-- Resource Title -->
                    <TextView
                        android:id="@+id/resource_title_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Course Resource 3"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <!-- Resource Description -->
                    <TextView
                        android:id="@+id/resource_description_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="A brief description of Course Resource 3."
                        android:textSize="14sp"
                        android:layout_marginTop="4dp" />

                </LinearLayout>

                <!-- Download Button -->


            </LinearLayout>

            <!-- Additional Resource Cards can be added similarly with unique IDs and download buttons -->

        </LinearLayout>

    </ScrollView>

</LinearLayout>
